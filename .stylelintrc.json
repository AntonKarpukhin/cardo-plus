{
  "extends": ["stylelint-config-standard", "stylelint-prettier/recommended"],
  "plugins": [
    "stylelint-prettier"
  ],
  "rules": {
    "prettier/prettier": [
      true,
      {
        "singleQuote": true,
        "tabWidth": 4
      }
    ],
    "custom-property-empty-line-before": "never",
    "declaration-no-important": true,
    "no-empty-source": true,
    "block-no-empty": true,
    "selector-class-pattern": null
  }
}
